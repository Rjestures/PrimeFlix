<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/ic_baseline_close_24"/>


                <TextView
                    android:id="@+id/tvAlert"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Add Work experience"
                    android:layout_toRightOf="@+id/back"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_slab"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"/>


                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="28dp"
                    android:text="Save"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/work"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Add Work"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_slab"/>

                <EditText
                    android:id="@+id/org_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="true"
                    android:focusable="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Enter Orgination name"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/Jobtitle"
                    android:inputType="text"
                    android:focusable="true"
                    android:editable="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:textColorHint="@color/grey"
                    android:hint="Job title"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:text="Employment Type"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_slab"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/button_round"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinner_emptype"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/work_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:focusable="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_slab"
                        android:hint="Enter Location"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />


                    <EditText
                        android:id="@+id/industry_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:focusable="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_slab"
                        android:hint="Industry name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"/>

                    <CheckBox
                        android:id="@+id/chkcurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:text="   I currently work in this role" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/statedate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_slab"
                            android:hint="Start date*"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey" />

                        <EditText
                            android:id="@+id/enddate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_slab"
                            android:hint="End date*"
                            android:inputType="text"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey" />

                        <TextView
                            android:id="@+id/present"
                            android:layout_width="match_parent"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:text="Present"
                            android:layout_marginLeft="15dp"

                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_slab"/>

                    </LinearLayout>


                    <EditText
                        android:id="@+id/work_desc"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:editable="true"
                        android:focusable="true"
                        android:maxLines="5"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_slab"
                        android:hint="Describe your work"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>