<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rcloud.business.fragment.BusineesProfileFrag.EventsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:padding="6dp"
                android:fontFamily="@font/roboto_slab"
                android:text="Save"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">



                <TextView
                    android:id="@+id/tvAlert"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Select Event Pic"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto_slab"

                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"/>


                <ImageView
                    android:id="@+id/back"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_baseline_image_24"/>

            </RelativeLayout>


            <ImageView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/banner"/>



            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_slab"

                android:hint="Event name"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_slab"

                android:hint="Location"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textColor="@color/grey"/>
            <EditText
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_slab"

                android:hint="Venue details"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_slab"

                    android:textStyle="normal"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_rect"

                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_slab"
                android:hint="Enter Description"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_slab"

                android:hint="Ticket link"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/statedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="Start date*"
                    android:fontFamily="@font/roboto_slab"

                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <EditText
                    android:id="@+id/enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="End date*"
                    android:fontFamily="@font/roboto_slab"

                    android:inputType="text"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/statedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="Start Time*"
                    android:fontFamily="@font/roboto_slab"

                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <EditText
                    android:id="@+id/enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="End time*"
                    android:fontFamily="@font/roboto_slab"

                    android:inputType="text"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />



            </LinearLayout>




        </LinearLayout>

    </ScrollView>


</RelativeLayout>