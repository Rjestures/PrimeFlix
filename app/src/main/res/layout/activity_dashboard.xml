<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dl_dashBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/tb_header"
                layout="@layout/row_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:id="@+id/ll_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tb_header"
                android:minHeight="60dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <RelativeLayout
                    android:id="@+id/rl_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/iv_home"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/newlogo" />

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_home"
                        android:layout_centerHorizontal="true"
                        android:text="@string/menu_home"
                        android:textSize="10sp"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/v_home"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/tv_home"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@color/black" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_business"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/iv_business"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/report_arrow_chart_business_graph_stock_data_png_icon_free_166051" />

                    <TextView
                        android:id="@+id/tv_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_business"
                        android:layout_centerHorizontal="true"
                        android:text="@string/business"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/v_business"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/tv_business"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_entertainment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/iv_entertainment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/entertainment" />

                    <TextView
                        android:id="@+id/tv_entertainment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_entertainment"
                        android:layout_centerHorizontal="true"
                        android:text="@string/entertainment"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/v_entertainment"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/tv_entertainment"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_news"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/iv_news"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/news" />

                    <TextView
                        android:id="@+id/tv_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_news"
                        android:layout_centerHorizontal="true"
                        android:text="@string/news"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/v_news"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/tv_news"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/iv_sport"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/sports" />

                    <TextView
                        android:id="@+id/tv_sport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_sport"
                        android:layout_centerHorizontal="true"
                        android:text="@string/sport"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/v_sport"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/tv_sport"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@color/black" />

                </RelativeLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame_dashBoard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_bottomNavigation"
                android:layout_below="@+id/ll_tabs" />

            <LinearLayout
                android:id="@+id/ad_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/cl_bottomNavEntertainment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ad_view"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
                        android:id="@+id/bb_bottomNavEntertainment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        app:bnc_mode="inside"
                        app:hideOnScroll="true"

                        >

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/l_item_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/yellow"
                            app:bt_colorInactive="@color/yellow"
                            app:bt_icon="@drawable/ic_homer"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_yellow"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="@string/menu_home" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/l_item_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/red"
                            app:bt_colorInactive="@color/red"
                            app:bt_icon="@drawable/ic_category"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_red"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="@string/menu_category" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/l_item_profile_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/green"
                            app:bt_colorInactive="@color/green"
                            app:bt_icon="@drawable/ic_film"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_green"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="@string/all_video" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/l_item_profileist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/pruple"
                            app:bt_colorInactive="@color/pruple"
                            app:bt_icon="@drawable/ic_hearts"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_pruple"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="@string/menu_favorite" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/l_ite_profi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/orange"
                            app:bt_colorInactive="@color/orange"
                            app:bt_icon="@drawable/ic_file_download"
                            app:bt_iconHeight="20dp"
                            app:bt_iconWidth="20dp"
                            app:bt_shape="@drawable/bg_background_orange"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="download" />

                    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout

                    android:id="@+id/cl_bottomNavHome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
                        android:id="@+id/bb_bottomNavHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:elevation="0dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        app:bnc_mode="spread"
                        app:hideOnScroll="true"

                        >

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/call"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/yellow"
                            app:bt_colorInactive="@color/yellow"
                            app:bt_icon="@drawable/ic_ab_call"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_yellow"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="Call" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/network"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/red"
                            app:bt_colorInactive="@color/red"
                            app:bt_icon="@drawable/group"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_red"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="Network" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/green"
                            app:bt_colorInactive="@color/green"
                            app:bt_icon="@android:drawable/stat_notify_chat"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_green"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="Message" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/pruple"
                            app:bt_colorInactive="@color/pruple"
                            app:bt_icon="@drawable/banner"
                            app:bt_iconHeight="15dp"
                            app:bt_iconWidth="15dp"
                            app:bt_shape="@drawable/bg_background_pruple"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="Bank" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/orange"
                            app:bt_colorInactive="@color/orange"
                            app:bt_icon="@drawable/ic_media_play"
                            app:bt_iconHeight="20dp"
                            app:bt_iconWidth="20dp"
                            app:bt_shape="@drawable/bg_background_orange"
                            app:bt_shapeColor="@color/black_alfa_10"
                            app:bt_title="Media" />

                        <com.gauravk.bubblenavigation.BubbleToggleView
                            android:id="@+id/menu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bt_colorActive="@color/black"
                            app:bt_colorInactive="@color/black"
                            app:bt_icon="@drawable/ic_baseline_menu_24"
                            app:bt_iconHeight="20dp"
                            app:bt_iconWidth="20dp"
                            app:bt_shape="@drawable/bg_background_orange"
                            app:bt_shapeColor="@color/black_alfa_10" />


                    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:scrollbars="none"
            app:headerLayout="@layout/left_nav_header"
            app:itemBackground="@drawable/nav_item_bg"
            app:itemIconTint="@color/state_list"
            app:itemTextColor="@color/state_list"
            app:menu="@menu/menu_mtbies">

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>


</layout>