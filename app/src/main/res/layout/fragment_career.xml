<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rcloud.business.fragment.CareerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/viewyes"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="true"
                    android:focusable="true"
                    android:hint="Bio*"
                    android:fontFamily="@font/roboto_slab"

                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/headline"
                    android:inputType="text"
                    android:focusable="true"
                    android:editable="true"
                    android:fontFamily="@font/roboto_slab"

                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:hint="@string/headline"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">


                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/location"
                        android:inputType="text"
                        android:focusable="true"
                        android:fontFamily="@font/roboto_slab"

                        android:editable="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/grey"
                        android:hint="Location"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_slab"

                        android:textStyle="normal"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/button_round"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinner_res"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            />




                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:text="Gender "
                        android:fontFamily="@font/roboto_slab"

                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/button_round"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinner_gender"
                            android:layout_width="match_parent"
                            android:layout_height="45dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:text="Interest "
                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/roboto_slab"

                        android:textColor="@color/black"
                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/button_round"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinner_interest"
                            android:layout_width="match_parent"
                            android:layout_height="45dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:id="@+id/rel_skill"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_alignParentLeft="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/grey"
                android:background="@drawable/ic_baseline_emoji_events_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/add"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Skills"
                    android:textColor="@color/black"

                    android:textSize="16sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:text="3 skills on your profile"
                    android:textColor="@color/grey"
                    android:textSize="14sp"

                    android:textStyle="normal"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_baseline_add_circle_outline_24"
                android:backgroundTint="@color/grey">

            </ImageView>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:id="@+id/rel_featered"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_alignParentLeft="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/grey"
                android:background="@drawable/ic_baseline_star_outline_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/add"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Featured"
                    android:textColor="@color/black"

                    android:textSize="16sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Add link to external documents, media and website"
                    android:textColor="@color/grey"
                    android:textSize="14sp"

                    android:textStyle="normal"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_baseline_add_circle_outline_24"
                android:backgroundTint="@color/grey">

            </ImageView>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:id="@+id/rel_work"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_alignParentLeft="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/grey"
                android:background="@drawable/ic_baseline_home_24"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/icon"
                android:layout_toLeftOf="@+id/add"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Experience"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto_slab"

                    android:textColor="@color/black"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 position on your profile"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto_slab"

                    android:textColor="@color/grey"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_baseline_add_circle_outline_24"
                android:backgroundTint="@color/grey">

            </ImageView>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/eduction"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_alignParentLeft="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/grey"
                android:background="@drawable/ic_baseline_school_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/add"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Education"

                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab"
                    android:text="3 position on your profile"
                    android:textColor="@color/grey"

                    android:textSize="14sp"
                    android:textStyle="normal"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_baseline_add_circle_outline_24"
                android:backgroundTint="@color/grey">

            </ImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/educ"
            android:visibility="gone"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Education"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_slab"

                android:textStyle="normal"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/dept"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:editable="false"
                android:focusable="false"
                android:fontFamily="@font/roboto_slab"

                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColorHint="@color/grey"
                android:hint="eg.  SRGI"/>


            <TextView
                android:id="@+id/deptAddedu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab"

                android:text="Add new education"
                android:textColor="@color/redPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="@font/roboto_slab"

                android:textColor="@color/black"
                />
            <EditText
                android:textColor="@color/black"
                android:id="@+id/edu_location"
                android:inputType="text"
                android:focusable="true"
                android:fontFamily="@font/roboto_slab"

                android:editable="true"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="@color/grey"
                android:hint="Location"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Industry"
                android:fontFamily="@font/roboto_slab"

                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />
            <EditText
                android:textColor="@color/black"
                android:id="@+id/indus"
                android:inputType="text"
                android:focusable="true"
                android:editable="true"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab"

                android:textColorHint="@color/grey"
                android:hint="Industry"/>


        </LinearLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>